{
  "name": "@smartive/kubernetes-helpers",
  "version": "0.0.0-development",
  "description": "commandline tool that helps with kubernetes deployments",
  "main": "./build/kubernetes-helpers.js",
  "scripts": {
    "clean": "del-cli ./build ./out ./coverage",
    "build": "npm run clean && tsc -p ./config/tsconfig.build.json",
    "develop": "npm run clean && tsc -p .",
    "lint": "tslint -c ./tslint.json -p ./config/tsconfig.build.json",
    "test": "npm run lint && npm run clean && jest -c ./jest.json",
    "test:watch": "npm run clean && jest -c ./jest.json --watch",
    "semantic-release": "semantic-release",
    "package": "npm run build && pkg --out-path out .",
    "link": "npm run build && npm link"
  },
  "bin": {
    "k8s": "./build/kubernetes-helpers.js"
  },
  "keywords": [
    "kubernetes",
    "k8s",
    "cli",
    "helper",
    "kubectl"
  ],
  "repository": {
    "type": "git",
    "url": "git@git.smartive.ch:smartive/kubernetes-deploy.git"
  },
  "bugs": {
    "url": "https://git.smartive.ch/smartive/kubernetes-deploy/issues"
  },
  "homepage": "https://git.smartive.ch/smartive/kubernetes-deploy",
  "author": "Christoph BÃ¼hler <christoph@smartive.ch>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "verifyConditions": [
      {
        "path": "@semantic-release/gitlab",
        "gitlabUrl": "https://git.smartive.ch"
      },
      "@semantic-release/npm"
    ],
    "prepare": [
      "@semantic-release/npm"
    ],
    "publish": [
      {
        "path": "@semantic-release/gitlab",
        "gitlabUrl": "https://git.smartive.ch"
      },
      "@semantic-release/npm"
    ],
    "success": false,
    "fail": false
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "commander": "^2.17.1",
    "fs-extra": "^7.0.0",
    "got": "^9.2.2",
    "inquirer": "^6.1.0",
    "klaw": "^3.0.0",
    "node-machine-id": "^1.1.10",
    "ora": "^3.0.0",
    "semver": "^5.5.1",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@semantic-release/gitlab": "^3.0.1",
    "@semantic-release/npm": "^5.0.2",
    "@smartive/tslint-config": "^4.0.0",
    "@types/commander": "^2.12.2",
    "@types/fs-extra": "^5.0.4",
    "@types/got": "^8.3.4",
    "@types/inquirer": "0.0.42",
    "@types/jest": "^23.3.1",
    "@types/klaw": "^2.1.1",
    "@types/node": "^10.7.0",
    "@types/semver": "^5.5.0",
    "del-cli": "^1.1.0",
    "jest": "^23.5.0",
    "pkg": "^4.3.4",
    "semantic-release": "^15.9.8",
    "ts-jest": "^23.1.3",
    "tslint": "^5.11.0",
    "tsutils": "^3.0.0",
    "typescript": "^3.0.1"
  }
}
